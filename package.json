{
  "name": "nginx-gui",
  "version": "0.2.0",
  "description": "Browser-based nginx config manager with Next.js frontend",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"node server.js\" \"next dev --port 3000\"",
    "build": "next build",
    "start": "node server.js & next start --port 3000",
    "prod": "npm run build && npm run start"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy": "^1.18.1",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22",
    "@types/react": "^18.2.0",
    "@types/node": "^20.0.0"
  }
}

